<UserControl x:Class="LibView.ucFloorButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" MouseDown="UserControl_MouseDown">
    <Viewbox Stretch="Uniform">
        <Grid Width="100" Height="100" >
            <Rectangle x:Name="rtgFloor" Stroke="Black" StrokeThickness="2" RadiusX="10" RadiusY="10" />
            <Viewbox Margin="10">
                <TextBlock x:Name="tblFloor" Text="0" FontFamily="HYGothic-Extra" HorizontalAlignment="Center" />
            </Viewbox>
        </Grid>
    </Viewbox>
</UserControl>
